<div class="container">
  <div class="row">
    <h1 class="col-md-8 mb-4 mx-auto text-center" id="chat_room" data-chat_room="<%= @chat_room.id %>" data-customer="<%= current_customer.id %>">
      <%= @customer.name %> さんとのチャットルーム
    </h1>
  </div>
  <% @chats.each do |chat| %>
    <% if chat.customer_id == current_customer.id %>
      <%= @customer.name %>
        <%= chat.message %>
          <% else %>
            <% current_customer.name %>
              <%= chat.message %>
      <% end %>
   <% end %>
   
 <div class="kaiwa line">
  <% @chats.each do |chat| %>
    <% if chat.customer_id == current_customer.id %>
	<div class="name">
		<%= @customer.name %>
	</div>
	<div class="fukidasi left">
		<%= chat.message %>
	</div>
	 <% else %>
	<div class="fukidasi right">
	<%= chat.message %>
	</div>
	 <% end %>
   <% end %>
   </div>
   
      
       
  
  <div class="errors">
    <%= render "layouts/errors", obj: @chat %>
  </div>

  <%= form_with model: @chat, data: {remote: true} do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :chat_room_id %>
  <% end %>
  
</div>
