<div class="container py-5">
  <div class="row">
    <h3 class="col-md-6 text-center font-weight-bold">会員編集</h3>
  </div>


     <%= form_with model: @customer, url:  public_customer_path(@customer)  do |f| %>
      <div class="mt-5">
        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
              <%= f.label :name, '名前', class: "control-label" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true, :placeholder => "ユーザーネーム", class: 'form-control col-5' %>
            </div>
          </div>
        </div>
       </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
              <%= f.label :sex, '性別', class: "control-label" %>
            </div>
            <div class="col-md-9">
              <%= f.collection_radio_buttons :sex, Customer.sexes_i18n, :first, :last do |b| %>
                <span class="mr-3">
                  <%= b.label {b.radio_button + b.text} %>
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
              <%= f.label :email, 'メールアドレス', class: "control-label" %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, :placeholder => "sample@example.com", class: 'form-control col-5' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
             <%= f.label :active_area, "活動拠点", class: "control-label" %>
            </div>
            <div class="col-md-9">
            <%= f.select :active_area, Customer.ride_areas.keys, {},class: 'form-control col-5' %>
           </div>
         </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
             <%= f.label :objective, "筋トレ目的", class: "control-label" %>
            </div>
            <div class="col-md-9">
            <%= f.select :objective,{'健康のため': 0,'見た目を良くしたい': 1,'痩せたい': 2,'筋肉をつけたい': 3,'大会意識': 4},{ include_blank: '選択してください' }, class: 'form-control col-5' %>
           </div>
         </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
             <%= f.label :frequency, "筋トレ頻度", class: "control-label" %>
            </div>
            <div class="col-md-9">
            <%= f.select :frequency,{'月1〜2回': 0,'週2〜3回': 1,'週3〜4回': 2,'週4〜5回': 3,'週5回以上': 4},{ include_blank: '選択してください' }, class: 'form-control col-5' %>
           </div>
         </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
             <%= f.label :traning_style, "筋トレスタイル", class: "control-label" %>
            </div>
            <div class="col-md-9">
            <%= f.select :traning_style,{'ウェイトトレーニング': 0,'自重トレーニング': 1,'パーソナルトレーニング': 2,'その他': 3},{ include_blank: '選択してください' },class: 'form-control col-5' %>
           </div>
         </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
             <%= f.label :heart, "筋トレの熱意", class: "control-label" %>
            </div>
            <div class="col-md-9">
           <%= f.select :heart,{'健康のため': 0,'見た目を良くしたい': 1,'痩せたい': 2},{ include_blank: '選択してください' },class: 'form-control col-5' %>
          </div>
        </div>
       </div>
       
       <div class="form-group">
          <div class="row">
            <div class="col-md-3 text-left text-md-center">
              <%= f.label :introduction, '自己紹介', class: "control-label" %>
            </div>
            <div class="col-md-9">
              <%= f.text_area :introduction, :placeholder => "自己紹介", class: 'form-control col-5' %>
            </div>
          </div>
        </div>

          <div class="actions col-7 text-center">
           <%= f.submit "更新", class: 'btn btn-sm btn-success control-submit mr-5 mb-3' %>
         </div>
         <%end %>