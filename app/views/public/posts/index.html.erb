<div class="container">
  <div class="row">
    <h5 class="col-md-12 text-center font-weight-bold">投稿一覧</h5>
  </div>

   <div class="row">
     <div class="col-lg-12 d-flex justify-content-center flex-wrap">
            <% @posts.each do |post| %>
            <div class="p-3">
             <%=link_to  post_path(post.id) do %>
             <%= image_tag post.image, size: "250x250" %>
             <% end %>
           </div>
          <% end %>
        </div>
    </div>
  </div>

   