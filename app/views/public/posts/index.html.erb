<div id="splash">
  <div id="splash_text"></div>
</div>
 <div class="contaner py-5">
　  <div class="row">
　    <h1 class="col-sm-5 my-5 mx-auto text-center">Posts</h1>
　  </div>
　  <!--検索フォーム-->
　  <div class="row">
　    <div class="col-md text-center pb-3 my-auto h4">
　      <%= search_form_for @q do |f| %>
　       <!--name_contは、あいまい検索を指定-->
　       <%= f.search_field :title_or_caption_cont, placeholder: "キーワードから探す", class: "input-box mr-3"%>
　       <%= f.submit "検索",class: "btn btn-sm btn-success " %>
　      <% end %>
　    </div>
　  </div>
　  <div class="row">
　    <div class="col-md text-center h4">
　      <% if  @posts.present? %>
　         投稿数<%= @count %>件
　       <% else %>
　        投稿はありません。
　     <% end %>
　   </div>
　 </div>

　  <!--検索結果-->
　  <div class="row">
　    <div class="col-sm-10 mx-auto d-flex justify-content-center flex-wrap">
　      <% if  @posts.present? %>
　         <% @posts.each do |post| %>
　           <div class="card m-2 shadow " style="width: 30rem; border-radius: 10px;">
　             <div class="card-header">
                 <div class="row">
                  <div class="col-6">
                    <strong class="link"><%= link_to customer_path(post.customer) do %><%= post.customer.name %><% end %></strong>
                  </div>
                </div>
               </div>
　             <%=link_to  post_path(post.id) do %>
　               <%= image_tag post.image, size: "278x190" %>
　               <% end %>
　                <div class="card-body text-center">
　                 <h5 class="card-title text-body">
 　　                  <strong><%= post.title %></strong>
 　　                </h5>
 　　                <p class="text-body"><%= post.created_at.strftime('%Y/%m/%d') %></p>
 　　               </div>
 　　            </div>
 　　        <% end %>
 　　     <% end %>
 　　    </div>
 　　  </div>
 　　  <div class="row">
 　　    <div class="col-md d-flex justify-content-center">
 　　      <%= paginate @posts %>
 　　    </div>
 　　  </div>
　</div>
