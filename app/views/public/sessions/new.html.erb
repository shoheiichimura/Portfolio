<div class="contaner py-5"  style="height:720px">
  <div class="row">
    <h1 class="col-sm-5 my-5 mx-auto text-center">Log in</h1>
  </div>

　<%= form_with model: @customer, url: customer_session_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
    <div class="mt-5">
      <div class="form-group h3">
         <div class="row">
           <div class="col-md-5 text-left text-md-right mb-3">
             <%= f.label :email, 'メールアドレス', class: "control-label" %><span class="indispensable">*</span>
           </div>
           <div class="col-md-7">
             <%= f.text_field :email, autofocus: true, :placeholder => "sample@example.com", class: 'form-control col-5' %>
           </div>
         </div>
       </div>
      </div>
      <div class="form-group h3">
         <div class="row">
           <div class="col-md-5 text-left text-md-right">
            <%= f.label :password, "パスワード", class: "control-label" %><span class="indispensable">*</span>
           </div>
           <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-5' %>
          </div>
        </div>
       </div>
       <div class="form-grouph3">
         <div class="row">
           <div class="col-md-7 offset-5 mb-3">
            <% if devise_mapping.rememberable? %>
             <%= f.check_box :remember_me %>
             <%= f.label :remember_me %>
            </div>
           <% end %>
           </div>
          </div>
       <div class="row">
        <div class="actions mx-auto mb-3">
           <%= f.submit "ログインする", class: 'btn btn btn-info control-submit mr-5 mb-3' %>
        </div>
      </div>
      <% end %>
      <div class="row">
          <div class="col-7 offset-5 pr-0 text-center text-md-left font-weight-bold h5">新規登録は
           <%= link_to "こちら", new_customer_registration_path, class: "link" %>から行えます。
          </div>
      </div>
  </div>



