<div class="contaner py-5 chats">
  <div class="row">
    <h1 class="col-sm-5 my-5 mx-auto text-center">DM一覧</h1>
  </div>
  <div class="row">
   <div class="col-sm-5 mx-auto">
    <table class="table table-hover mt-5 text-center h3">
      <tbody>
       <% if @chat.exists? %>
         <% @another_user_rooms.each do |e| %>
           <tr>
             <th>
               <%= link_to customer_path(e.customer.id) do %>
                <%= image_tag e.customer.profile_image, :size =>'50x50', class: "rounded-circle" %>
               <% end %>
             </th>
             <td style="vertical-align: middle;">
               <%= e.customer.name %>
             </td>
             <td style="vertical-align: middle;">
                <% if e.chat_room.chats.count > 0 %>
                  <%= link_to chat_path(e.customer.id), class: "link" do %><%= e.chat_room.chats.order('created_at DESC').first.message %><% end %>
                <% end %>
             </td>
           </tr>
         <% end %>
       <% else %>
         <h2 class="text-center">DMはありません。</h2>
       <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>







