<div class="container py-5">
  <div class="row">
    <h1 class="col-sm-8 mx-auto text-center">
      DM一覧
    </h1>
  </div>
  <div class="row">
   <div class="col-sm-6 mx-auto">
    <table class="table table-hover mt-5 text-center h3">
      <tbody>
       <% if @another_user_rooms.exists? %>
         <% @another_user_rooms.each do |e| %>
           <tr>
             <th>
               <%= link_to customer_path(e.customer.id) do %>
                <%= image_tag e.customer.profile_image, :size =>'50x50', class: "rounded-circle" %>
               <% end %>
             </th>
             <td style="vertical-align: middle;">
               <%= e.customer.name %>
             </td>
             <td style="vertical-align: middle;">
               <%= link_to chat_path(e.customer.id), class: "link" do %><%= e.chat_room.chats.order('created_at DESC').first.message %><% end %>
             </td>
           </tr>
         <% end %>
       <% else %>
         <p>DMはありません。</p>
       <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>







