<div class="contaner py-5">
  <div class="row">
    <h1 class="col-sm-5 my-5 mx-auto text-center">Posts</h1>
  </div>

  <div class="row">
    <div class="col-md-6 mx-auto">
        <table class="table text-center table-secondary table-hover h4">
          <thead class="thead-dark">
            <tr>
              <th scope="col">投稿ID</th>
              <th scope="col">氏名</th>
              <th scope="col">タイトル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td style="vertical-align: middle;"><%= post.id %></td>
              <td style="vertical-align: middle;">
                <strong><%= link_to post.customer.name, admin_post_path(post), class: "link" %></strong>
              </td>
              <td style="vertical-align: middle;"><strong><%= post.title %></strong></td>
              <td><%= link_to admin_post_path(post), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>削除する<% end %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
      <div class="col-md d-flex justify-content-center">
        <%= paginate @posts %>
      </div>
  </div>
</div>