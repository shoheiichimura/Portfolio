<div class="container py-5">
  <div class="row">
    <h3 class="col-md-12 text-center font-weight-bold">管理者Log in</h3>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
   <div class="mt-5">
    <div class="form-group">
          <div class="row">
            <div class="col-md-5 text-left text-md-right">
              <%= f.label :email, 'メールアドレス', class: "control-label" %>
            </div>
            <div class="col-md-7">
              <%= f.email_field :email, :placeholder => "sample@example.com", class: 'form-control col-7' %>
            </div>
          </div>
        </div>

    <div class="form-group">
         <div class="row">
           <div class="col-md-5 text-left text-md-right">
            <%= f.label :password, "パスワード６文字以上", class: "control-label" %>
            <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
            <% end %>
           </div>
           <div class="col-md-7">
            <%= f.password_field :password, class: 'form-control col-7' %>
          </div>
        </div>
       </div>
     <div class="actions col-12 text-center">
    <%= f.submit "Log in", class: 'btn btn-sm btn-success control-submit mr-5 mb-3' %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
