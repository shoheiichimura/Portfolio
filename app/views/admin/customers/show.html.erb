<div class="container" id="show">
  <div class ="row">
    <div class="col-sm-8 py-3 mx-auto text-center">
       <h1 class="m-4 font-weight-bold">
         <%= @customer.name %>さんの会員詳細
       </h1>
    </div>
</div>
<div class="row">
  <div class="col">
    <div class="text-center"><%= image_tag @customer.profile_image %></div>
  </div>
</div>

<!--ユーザー編集-->
<div class="row">
  <div class="col-8 d-flex mx-auto">
    <table class="table table-striped  text-center" >
      <tbody>
        <tr>
          <th scope="row">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th scope="row">ユーザー名</th>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th scope="row">性別</th>
          <td><%= @customer.sex_i18n%></td>
        </tr>
        <tr>
          <th scope="row">活動拠点</th>
          <td><%= @customer.active_area_i18n %></td>
        </tr>
        <tr>
          <th scope="row">筋トレ歴</th>
          <td><%= @customer.history_i18n %></td>
        </tr>
        <tr>
          <th scope="row">筋トレ目的</th>
          <td><%= @customer.objective_i18n %></td>
        </tr>
        <tr>
          <th scope="row">筋トレ頻度</th>
          <td><%= @customer.frequency_i18n %></td>
        </tr>
        <tr>
          <th scope="row">筋トレの熱意</th>
          <td><%= @customer.heart_i18n %></td>
        </tr>
        <tr>
          <th scope="row">自己紹介</th>
          <td><%= @customer.introduction %></td>
        </tr>
        <tr>
          <th scope="row">会員ステータス</th>
          <td><strong>
              <% if @customer.is_deleted %>
              <div class="text-danger">退会済</div>
              <% else %>
              <div class="text-success">有効</div>
              <% end %>
         </strong></td>
       </tr>
       </tbody>
    </table>
   </div>
 </div>
 <div class="row">
   <div class="col-lg-12 my-5 text-center">
     <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success"%>
   </div>
 </div>
</div>