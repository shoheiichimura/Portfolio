<!DOCTYPE html>
<html>
  <head>
    <title>TraningFriend</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>


       <nav class="navbar navbar-expand-md">
         <div class="container">
          <a class="navbar-brand" href="/">
           <%=image_tag "IMG_0083.jpg", size:"300x100" %>
           </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
         aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

       <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav  ml-auto mr-auto">

         <% if customer_signed_in? %>
         <!--会員はサインインしているか-->
         <li>
          <%= link_to customer_path(current_customer), class: "nav-link text-light" do %>
           <i class="fas fa-user fa-2x mx-3"></i>
          <% end %>
         </li>
         <li>
          <%= link_to customers_path, class: "nav-link text-light" do %>
           <i class="fas fa-users fa-2x mx-3"></i>
          <% end %>
         </li>
         <li>
          <%= link_to new_post_path,class: "nav-link text-light" do %>
           <i class="fas fa-camera fa-2x mx-3"></i>
          <% end %>
         </li>
         <li>
          <%= link_to chat_rooms_path,class: "nav-link text-light" do %>
           <i class="fas fa-envelope fa-2x mx-3"></i>
          <% end %>
         </li>
         <li>
          <%= link_to posts_path,class: "nav-link text-light" do %>
           <i class="fas fa-search-plus fa-2x mx-3"></i>
          <% end %>
         </li>
         <li>
          <%= link_to destroy_customer_session_path, class: "nav-link text-light" , method: :delete do %>
           <i class="fas fa-sign-out-alt fa-2x mx-3"></i>
          <% end %>
         </li>
          <% elsif admin_signed_in? %>
         <!--adminがログイン中のヘッダー-->
          <li class="nav-item">
           <%= link_to admin_customers_path,class: "nav-link text-light" do %>
            <i class="fas fa-users fa-2x mx-3"></i>
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to destroy_admin_session_path,class: "nav-link text-light" do %>
            <i class="fas fa-sign-out-alt fa-2x mx-3"></i>
           <% end %>

          <% else %>
          <!--会員がサインインしていない時のヘッダー-->
         <li class="nav-item">
           <%= link_to  root_path,class: "nav-link text-light" do %>
            <i class="fas fa-home fa-2x mx-3"></i>
           <% end %>
         </li>
         <li class="nav-item">
          <%= link_to about_path,class:"nav-link text-light" do %>
           <i class="fas fa-dumbbell fa-2x mx-3"></i>
          <% end %>
         </li>
         <li class="nav-item">
          <%= link_to new_customer_registration_path,class: "nav-link text-light" do %>
           <i class="fas fa-user-plus fa-2x mx-3"></i>
          <% end %>
         </li>
         <li class="nav-item">
          <%= link_to  customer_session_path,class: "nav-link text-light" do %>
           <i class="fas fa-sign-in-alt fa-2x mx-3"></i>
          <% end %>
         </li>
       <% end %>
       </ul>
      </div>
    </div>
    </nav>
  </header>


  <main>
   <% if notice %>
    <p class="notice"><%= notice %></p>
   <% end %>
   <% if alert %>
    <p class="alert"><%= alert %></p>
   <% end %>
    <%= yield %>
  </main>

  <footer>
    <div class="container p-5">
    	<div class="row">
    	 <div class="mx-auto">
    		<p style="color:white;">@Traning_friend</p>
    	 </div>
      </div>
    </div>
  </footer>
  </body>
</html>
